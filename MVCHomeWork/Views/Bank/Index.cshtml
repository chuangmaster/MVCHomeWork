@model IEnumerable<MVCHomeWork.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.TextBox("keyword", string.Empty, new { placeholder = "輸入你要搜尋的內容..." })
        <input type="submit" value="Search" class="btn btn-default" />
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.銀行名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.分行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶號碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.分行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶號碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7">
                找不到任何與關鍵字有關係的內容!
            </td>
        </tr>
    }
</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Are you sure you want to delete this?
                </h4>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            銀行名稱
                        </dt>
                        <dd>
                            {{bankName}}
                        </dd>
                        <dt>
                            銀行代碼
                        </dt>
                        <dd>
                            {{swiftCode}}
                        </dd>
                        <dt>
                            分行代碼
                        </dt>
                        <dd>
                            {{code}}
                        </dd>
                        <dt>
                            帳戶名稱
                        </dt>
                        <dd>
                            {{account}}
                        </dd>
                        <dt>
                            帳戶號碼
                        </dt>
                        <dd>
                            {{accountNo}}
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    取消
                </button>
                <button type="button" class="btn btn-primary" v-on:click="deleteCustomer">
                    確定刪除
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>



@section scripts{
    <script src="https://unpkg.com/vue"></script>
    <script>
        var app = new Vue({
            el: "#app",
            data: {
                id: '',
                bankName: '',
                swiftCode: '',
                code: '',
                account: '',
                accountNo: '',
            },
            methods: {
                deleteConfirm: function (id) {
                    var that = this;
                    $.ajax({
                        url: "/Bank/Delete",
                        dataType: "json",
                        method: "GET",
                        data: "id=" + id,
                        success: function (result) {
                            if (result) {
                                var data = JSON.parse(result.data);
                                that.id = id;
                                that.bankName = data.bankName;
                                that.swiftCode = data.swiftCode;
                                that.code = data.code;
                                that.account = data.account;
                                that.accountNo = data.accountNo;
                            } else {
                                alert(result.data)
                            }
                        },
                        error: function (result) {
                            alert("發生錯誤");
                        }
                    }).done();
                },
                deleteCustomer: function () {
                    var that = this;
                    $.ajax({
                        url: "/Bank/Delete",
                        dataType: "json",
                        method: "POST",
                        data: "id=" + that.id,
                        success: function (result) {
                            if (result) {
                                alert("刪除成功");
                                location.reload();
                            } else {
                                alert(result.data)
                            }
                        },
                        error: function (result) {
                            alert("發生錯誤");
                        }
                    }).done();
                }
            },
        });

    </script>
}


