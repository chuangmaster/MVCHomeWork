@model IEnumerable<MVCHomeWork.Models.客戶資料>

@{
    ViewBag.Title = "客戶資料列表";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.Label("分類搜尋:", htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewBag.客戶分類, htmlAttributes: new { @class = "control-label col-md-4" })
        @Html.Label("關鍵字搜尋:", htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.TextBox("keyword", string.Empty, new { placeholder = "輸入你要搜尋的內容...", @class = "control-label col-md-4" })
        <input type="submit" value="Search" class="btn btn-default" />
    }
</div>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.Label("排序依據:", htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.DropDownList("sortBy", (IEnumerable<SelectListItem>)ViewBag.sortBy, htmlAttributes: new { @class = "control-label col-md-4" })
        @Html.Label("排序方式:", htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.DropDownList("sortDirection", (IEnumerable<SelectListItem>)ViewBag.sortDirection, htmlAttributes: new { @class = "control-label col-md-4" })
        <input type="submit" value="Search" class="btn btn-default" />
    }
</div>
<table class="table">
    <tr>
        <th>
            <a>@Html.DisplayNameFor(model => model.客戶名稱)</a>
        </th>
        <th>
            <a>@Html.DisplayNameFor(model => model.統一編號)</a>
        </th>
        <th>
            <a>@Html.DisplayNameFor(model => model.電話)</a>
        </th>
        <th>
            <a>@Html.DisplayNameFor(model => model.傳真)</a>
        </th>
        <th>
            <a>@Html.DisplayNameFor(model => model.地址)</a>
        </th>
        <th>
            <a>@Html.DisplayNameFor(model => model.Email)</a>
        </th>
        <th>
            <a>@Html.DisplayNameFor(model => model.客戶分類)</a>
        </th>
        <th></th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.統一編號)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.傳真)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.地址)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶分類)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <a href="#" v-on:click="deleteConfirm('@Html.Raw(item.Id)')" data-toggle="modal" data-target="#myModal">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7">
                找不到任何與關鍵字有關係的內容!
            </td>
        </tr>
    }
</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Are you sure you want to delete this?
                </h4>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            客戶名稱
                        </dt>
                        <dd>
                            {{customerName}}
                        </dd>
                        <dt>
                            統一編號
                        </dt>
                        <dd>
                            {{uniformNumbers}}
                        </dd>
                        <dt>
                            電話
                        </dt>
                        <dd>
                            {{tel}}
                        </dd>
                        <dt>
                            傳真
                        </dt>
                        <dd>
                            {{fax}}
                        </dd>
                        <dt>
                            地址
                        </dt>
                        <dd>
                            {{addr}}
                        </dd>
                        <dt>
                            email
                        </dt>
                        <dd>
                            {{email}}
                        </dd>
                        <dt>
                            客戶分類
                        </dt>
                        <dd>
                            {{category}}
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    取消
                </button>
                <button type="button" class="btn btn-primary" v-on:click="deleteCustomer">
                    確定刪除
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<div class="row">@Html.ActionLink("匯出Excel", "ExportExcel")</div>


@section scripts{
    <script src="https://unpkg.com/vue"></script>
    <script>
        var app = new Vue({
            el: "#app",
            data: {
                id: '',
                customerName: '',
                uniformNumbers: '',
                tel: '',
                fax: '',
                addr: '',
                email: '',
                category: '',
            },
            methods: {
                deleteConfirm: function (id) {
                    var that = this;
                    $.ajax({
                        url: "/Customer/Delete",
                        dataType: "json",
                        method: "GET",
                        data: "id=" + id,
                        success: function (result) {
                            if (result) {
                                var data = JSON.parse(result.data);
                                that.id = id;
                                that.customerName = data.customerName;
                                that.uniformNumbers = data.uniformNumbers;
                                that.tel = data.tel;
                                that.fax = data.fax;
                                that.addr = data.addr;
                                that.email = data.email;
                                that.category = data.category;
                            } else {
                                alert(result.data)
                            }
                        },
                        error: function (result) {
                            alert("發生錯誤");
                        }
                    }).done();
                },
                deleteCustomer: function () {
                    var that = this;
                    $.ajax({
                        url: "/Customer/Delete",
                        dataType: "json",
                        method: "POST",
                        data: "id=" + that.id,
                        success: function (result) {
                            if (result) {
                                alert("刪除成功");
                                location.reload();
                            } else {
                                alert(result.data)
                            }
                        },
                        error: function (result) {
                            alert("發生錯誤");
                        }
                    }).done();
                }
            },
        });

    </script>
}
